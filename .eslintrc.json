{   
    "parser": "@babel/eslint-parser",
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": ["airbnb-base","prettier"],
    "plugins": ["prettier"],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "no-console":"off",
        "prettier/prettier": ["error", {"endOfLine":"auto"}],
        "no-underscore-dangle": ["error", { "allow": ["_id"]}]
    },
    "globals":{
        "__rootdir": "readonly",
        "M": "writable"
    }
}
